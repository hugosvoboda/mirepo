<h2>Registrarse en Holiday Reminder</h2>

<p id="notice"><%= notice %></p>

<h3>Complete los siguientes datos del formulario:</h3>

<%= form_tag(user_registration_path,:method => 'post') %>

<ul>
  <% @user.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>

<table>

<tr>
<td>Nombre : </td>
<td><%=text_field_tag "user[first_name]",@user.first_name, :autofocus => true %></td>
</tr>

<tr>
<td>Apellido : </td>
<td><%=text_field_tag "user[last_name]",@user.last_name %></td>
</tr>

<tr>
<td>Pais : </td>
<td><%= select_tag(:country_id, options_for_select([['Argentina', 1], ['Brazil', 2], ['United States', 3]], 1)) %></td>
</tr>

<tr>
<td>Provincia : </td>
<td><%=text_field_tag "user[state]",@user.state %></td>
</tr>

<tr>
<td>Email : </td>
<td><%=email_field_tag "user[email]",@user.email %></td>
</tr>

<tr>
<td>Contrase&ntilde;a : </td>
<td><%=password_field_tag "user[password]",@user.password %></td>
</tr>

<tr>
<td>Repetir Contrase&ntilde;a : </td>
<td><%=password_field_tag "user[password_confirmation]",@user.password_confirmation %></td>
</tr>

<tr>
<td><%= submit_tag nil, :class => "form_submit"%></td>
</tr>
</table>
<br />
<%= render :partial => "devise/shared/links" %>